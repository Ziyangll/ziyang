<!DOCTYPE html>

<html lang="en" dir="ltr">

	<head>
		<meta charset="utf-8">
		<link rel='stylesheet' type='text/css' href='/todostyles.css'>
		<title>todo</title>
		<link rel="icon" type="image/ico" href="/favicon.ico" />
	</head>
	<body>
		<div class='box' id='heading'>
			<h1> <%= today %> </h1>		
		</div>

		<div class='box'>
			<ul>

		<% todoListItems.forEach( (i) => { %>
		<form action='/delete' method='POST'>
		<div class='item'>
			<input type='checkbox' name="checkbox" value="<%=i._id%>" onChange="this.form.submit()">
			<p> <%= i.name %></p>	
		</div>
		</form>
		<% }); %>

			</ul>
				
		<form class='item' action='/todo' method='POST'>
			<input type='text' name='newItem' placeholder='new todo' autocomplete='off'>
			<button type='submit' name='button'>+</button>
		</form>
		</div>
		
	</body>

</html>
